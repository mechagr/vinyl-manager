@model VinylManager.Models.Artist

@{
    ViewData["Title"] = "Delete Artist";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this artist?</h3>

<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Bio)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Bio)</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
